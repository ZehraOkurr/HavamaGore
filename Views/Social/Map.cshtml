    <div id="map"></div>
    
    <div class="alert alert-dark bg-dark text-white-50 border-secondary mt-3 d-flex align-items-center">
        <i class="fas fa-info-circle fa-2x me-3"></i>
        <div>
            <strong>NasÄ±l Ã‡alÄ±ÅŸÄ±r?</strong> Konum izni verdiÄŸinde haritada gÃ¶rÃ¼nÃ¼rsÃ¼n. Sadece son 24 saatte aktif olanlar gÃ¶zÃ¼kÃ¼r.
        </div>
    </div>
</div>

<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script>
    // 1. HaritayÄ± BaÅŸlat (BaÅŸlangÄ±Ã§ta TÃ¼rkiye merkezli)
    var map = L.map('map').setView([39.9334, 32.8597], 6);

    // 2. Harita TemasÄ± (Koyu Mod - Dark Matter)
    L.tileLayer('https://{s}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}{r}.png', {
        attribution: '&copy; OpenStreetMap contributors &copy; CARTO',
        subdomains: 'abcd',
        maxZoom: 19
    }).addTo(map);

    // 3. KullanÄ±cÄ±nÄ±n Konumunu Al
    if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(success, error);
    } else {
        alert("TarayÄ±cÄ±nÄ±z konum servisini desteklemiyor.");
    }

    // Konum Bulununca Ã‡alÄ±ÅŸan Fonksiyon
    function success(position) {
        var lat = position.coords.latitude;
        var lng = position.coords.longitude;

        // HaritayÄ± kullanÄ±cÄ±nÄ±n olduÄŸu yere odakla
        map.setView([lat, lng], 13);

        // A) Kendi Marker'Ä±mÄ±zÄ± Ekle (Sen BuradasÄ±n)
        var myIcon = L.divIcon({
            className: 'custom-div-icon',
            html: `<div style="background-color: #e74c3c; width: 15px; height: 15px; border-radius: 50%; border: 2px solid white; box-shadow: 0 0 10px #e74c3c;"></div>`,
            iconSize: [15, 15],
            iconAnchor: [7, 7]
        });

        L.marker([lat, lng], {icon: myIcon}).addTo(map)
            .bindPopup("<b>ğŸ“ Sen BuradasÄ±n</b>")
            .openPopup();

        // B) Konumu VeritabanÄ±na Kaydet
        fetch('/Social/UpdateLocation', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ lat: lat, lng: lng })
        });

        // C) DiÄŸer KullanÄ±cÄ±larÄ± Getir
        loadOtherUsers();
    }

    function error() {
        alert("Konum izni verilmediÄŸi iÃ§in harita Ã¶zelliÄŸi kÄ±sÄ±tlÄ± Ã§alÄ±ÅŸacak. ğŸ˜”");
        loadOtherUsers(); // Ä°zin vermese de diÄŸerlerini gÃ¶rsÃ¼n
    }

    // DiÄŸer KullanÄ±cÄ±larÄ± Haritaya Ekle
    function loadOtherUsers() {
        fetch('/Social/GetMapUsers')
            .then(res => res.json())
            .then(users => {
                users.forEach(user => {
                    // Profil resmi yoksa varsayÄ±lan avatar
                    var pic = (user.profilePicture && user.profilePicture !== "null") 
                              ? user.profilePicture 
                              : `https://ui-avatars.com/api/?name=${user.username}&background=random`;

                    // Ã–zel Ä°kon (Yuvarlak Profil Resmi)
                    var userIcon = L.icon({
                        iconUrl: pic,
                        iconSize: [50, 50], // Avatar boyutu
                        iconAnchor: [25, 25], // Merkeze oturt
                        className: 'custom-marker-icon' // CSS sÄ±nÄ±fÄ±
                    });

                    // Marker Ekle
                    var marker = L.marker([user.lat, user.lng], { icon: userIcon }).addTo(map);
                    
                    // TÄ±klayÄ±nca Ã‡Ä±kan Baloncuk
                    var popupContent = `
                        <div class="text-center">
                            <h6 class="fw-bold mb-1">${user.username}</h6>
                            <button onclick="startChatFromMap('${user.username}')" class="btn btn-primary btn-sm rounded-pill py-0 mt-1" style="font-size: 10px;">Mesaj At ğŸ’¬</button>
                        </div>
                    `;
                    marker.bindPopup(popupContent);
                });
            });
    }

    // Haritadan Sohbet BaÅŸlatma (Layout'taki Ã§ekmeceyi aÃ§ar)
    function startChatFromMap(username) {
        if(window.parent.openChatDrawer) {
            window.parent.openChatDrawer(username);
        } else {
            alert("Sohbet Ã¶zelliÄŸi yÃ¼klenemedi.");
        }
    }
</script>